<form id="edit-form">
<div id="request-input">
  {{#if description}}
    <div class="well">{{description}}</div>
  {{/if}}
  <table class="fixed" width="100%">
  <tr>
    <th>Field Name</th>
    <th>Type</th>
    <th width="50%">Value</th>
  </tr>
  {{#if typeField}}
    {{#with typeField}}
      <tr>
        <td>
          {{#if required}}<span class="required">*</span>{{/if}}
          {{name}}:
        </td>
        <td>
          <span class="inactive">schema name</span>
        </td>
        <td>
          {{>field}}
        </td>
      </tr>
    {{/with}}
  {{/if}}
  {{#if hasFields}}
    {{#each fields}}
      <tr>
        <td {{#if description}}style="border-bottom: 0;"{{/if}}>
          {{#if required}}<span class="required">*</span>{{/if}}
          {{name}}:
        </td>
        <td {{#if description}}style="border-bottom: 0;"{{/if}}>
          <span class="inactive">{{{displayType}}}</span>
        </td>
        <td {{#if description}}style="border-bottom: 0;"{{/if}}>
          {{#if writable}}
            {{>field}}
          {{else}}
            <span class="inactive">
              {{#if value}}
                {{value}}
              {{else}}
                &ndash;
              {{/if}}
          {{/if}}
        </td>
      </tr>
      {{#if description}}
        <tr>
          <td colspan="3" style="border-top: 0; padding: 0 10px;">
            <span class="inactive">{{description}}</span>
          </td>
        </tr>
      {{/if}}
    {{/each}}
  {{else}}
    <tr>
      <td colspan="3" style="text-align: center;">
        <br/>
        {{#ifEqual mode "action"}}
          <i>This action has no inputs</i>
        {{else}}
          {{#ifEqual mode "update"}}
            <i>This resource has no fields that can be edited</i>
          {{else}}
            <i>This resource has no fields that can be set</i>
          {{/ifEqual}}
        {{/ifEqual}}
      </td>
    </tr>
  {{/if}}
  </table>
</div>

<div id="request-output">
</div>
</form>
