<span class="obj-syntax">{{{open}}}</span>
{{#if (and collapsible length)}}
  {{#if expanded}}
    <span class="obj-summary" {{action "collapse"}}><i class="icon icon-minus-circle"/></span>
  {{else}}
    <span class="obj-summary collapsed" {{action "expand"}}>
    {{yield "summary"}}
  {{/if}}
{{/if}}

{{#if (and expanded length)}}
  <div class="collapsible-body">
    {{yield "body"}}
  </div>
{{/if}}

<span class="obj-syntax">{{{close}}}</span>

